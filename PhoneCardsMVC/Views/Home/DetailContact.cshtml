@model  PhoneCardsMVC.Models.Contact
@{
    ViewBag.Title = "DetailContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail Contact</h2>

<div>

    <table cellpadding="5" cellspacing="5">
        <tr>
            <th colspan="2" align="center">Person Details</th>
        </tr>
        <tr>
            <td>Name</td>
            <td> : </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>Surname</td>
            <td> : </td>
            <td>
                @Model.Surname
            </td>
        </tr>
        <tr>
            <td>Phone</td>
            <td> : </td>
            <td>
                @Model.Phone
            </td>
        </tr>
        <tr>
            <td>Group</td>
            <td> : </td>
            <td>

                @Model.GroupName
            </td>
        </tr>

        <tr id="title" name="title">
            <td>Unvan</td>
            <td> : </td>
            <td>
                @Model.TitleName
            </td>
        </tr>

        @if (Model.GroupId == 1)
        {
            <tr id="clientCompany" name="clientCompany">
                <td>Client Company</td>
                <td> : </td>
                <td>
                    @Model.CompanyName
                </td>
            </tr>

            <tr id="clientDepartment" name="clientDepartment">
                <td>Client Department</td>
                <td> : </td>
                <td>
                    @Model.DepartmentName
                </td>
            </tr>
        }
        else
        {
            <tr id="consultantType" name="consultantType">
                <td>Consultant Type</td>
                <td> : </td>
                <td>
                    @Model.ConsultantTypeName
                </td>
            </tr>
        }


    </table>
</div>
@Html.ActionLink("<< Back ", "ListContacts")